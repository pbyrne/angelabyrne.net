---
layout: layout.liquid
pagination:
  data: products
  size: 1
  alias: product
permalink: "products/{{ product.slug }}/"
title: "{{product.name}}"
---

<article id="{{ product.slug }}">
  <h1>{{ product.name }}</h1>
  <img src="{{ product.image }}" alt="Product image for {{ product.name }}">
  <p>{{ product.description }}</p>
</article>
